<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    tools:context=".MainActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        app:cornerRadius="20dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="NEXT"
        app:backgroundTint="@color/white"
        android:layout_margin="24dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/eser_edit"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Username"
        android:layout_margin="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/email_edit"
        app:layout_constraintTop_toBottomOf="@+id/eser_edit"
        android:text="Email"
        android:layout_margin="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


   <EditText
       app:layout_constraintTop_toBottomOf="@+id/email_edit"
       android:text="Password"
       android:layout_margin="24dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"/>


    <ImageView
        app:layout_constraintEnd_toEndOf="@+id/dp_text"
        app:layout_constraintStart_toStartOf="@+id/dp_text"
        app:layout_constraintBottom_toTopOf="@+id/dp_text"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ci_log" />

    <TextView
        android:id="@+id/dp_text"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="100sp"
      android:textStyle="bold"
      android:textColor="@color/white"
      android:textSize="40sp"
      android:text="Trivia"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"/>



</androidx.constraintlayout.widget.ConstraintLayout>